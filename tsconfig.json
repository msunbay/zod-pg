{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "types": ["vitest/globals"]
  },

  "include": ["src/**/*.ts", "test/**/*.ts", "./vitest.config.ts", "./dev.ts", "zod-schemas/**/*.ts"],
}
