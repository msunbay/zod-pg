{
  "name": "zod-pg",
  "version": "5.0.0",
  "description": "Opinionated Zod schema generator for PostgreSQL databases",
  "packageManager": "npm@10.8.2",
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "zod-pg": "index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "start": "npm run build && node index.js",
    "dev": "tsx dev.ts",
    "test": "npm run build && npm run test:integration && npm run test:types",
    "test:integration": "npm run test:integration:cli && npm run test:integration:schema",
    "test:integration:cli": "vitest --project integration:cli run",
    "test:integration:schema": "vitest --project integration:schema run",
    "test:types": "tsc --noEmit",
    "test:watch": "jest --watch",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-pg.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "zod",
    "postgresql"
  ],
  "files": [
    "dist",
    "templates"
  ],
  "author": "msolvaag",
  "license": "ISC",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@testcontainers/postgresql": "^11.2.1",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@vitest/coverage-v8": "^4.0.3",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "testcontainers": "^11.2.1",
    "typescript": "^5.9.2",
    "vitest": "^4.0.3",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "pg": ">=8.12.0"
  },
  "dependencies": {
    "zod-dbs-cli": "^2.0.3",
    "zod-dbs-pg": "^2.0.1"
  }
}
